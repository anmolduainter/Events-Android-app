<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="320dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pew="http://schemas.android.com/tools"
    android:elevation="2dp"
    android:layout_marginLeft="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/AllEventRel1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.fmsirvent.ParallaxEverywhere.PEWImageView
            android:id="@+id/AllEventsImage1"
            android:background="@drawable/mountain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#8000"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/Name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock-Climbing"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>



            <TextView
                android:id="@+id/Date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name1"
                android:layout_marginTop="10dp"
                android:text="2017-11-10"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="5dp"/>



            <TextView
                android:id="@+id/Time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name1"
                android:layout_toRightOf="@id/Date1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text=" 8:00 AM - 9:00 PM "
                android:textSize="10dp"
                android:textColor="#fff"
                android:textStyle="bold"
                />

        </RelativeLayout>

    </RelativeLayout>






</android.support.v7.widget.CardView>