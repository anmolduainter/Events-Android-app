<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="320dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/AllEventRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.fmsirvent.ParallaxEverywhere.PEWImageView
            android:id="@+id/AllEventsImage"
            android:background="@drawable/mountain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#8000"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock-Climbing"
                android:textSize="18dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name"
                android:layout_marginTop="10dp"
                android:text="2017-11-10"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"/>



            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Date"
                android:layout_marginTop="10dp"
                android:text="8:00 AM - 9:00 PM"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="bold"
                />



            <TextView
                android:id="@+id/Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Time"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:text="Rock event"
                android:textSize="15dp"
                android:textColor="#fff"
                android:textStyle="italic"
                />


            <Button
                android:id="@+id/Register_All_Events_Button"
                android:layout_width="100dp"
                android:text="REGISTER"
                android:textStyle="bold"
                android:textColor="#fff"
                android:background="@null"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                />


            <Button
                android:id="@+id/BookMark_All_Events"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/Register_All_Events_Button"
                android:background="@drawable/bookmark"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>


    </RelativeLayout>



</android.support.v7.widget.CardView>