<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_height="300dp"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/AllEventRel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/AllEventsImage"
            android:background="@drawable/mountain"
            android:layout_width="200dp"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/Name"
            android:layout_toRightOf="@id/AllEventsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rock-Climbing"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>



        <TextView
            android:id="@+id/Date"
            android:layout_toRightOf="@id/AllEventsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_marginTop="10dp"
            android:text="2017-11-10"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>



        <TextView
            android:id="@+id/Time"
            android:layout_toRightOf="@id/AllEventsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Date"
            android:layout_marginTop="10dp"
            android:text="8:00 AM - 9:00 PM"
            android:textSize="20dp"
            android:textStyle="bold"
           />



        <TextView
            android:id="@+id/Desc"
            android:layout_toRightOf="@id/AllEventsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Time"
            android:layout_marginTop="10dp"
            android:text="Rock event"
            android:textSize="15dp"
            android:textStyle="italic"
            />

        <Button
            android:layout_below="@id/AllEventsImage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="REGISTER"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="15dp"
            android:background="@android:color/holo_blue_dark"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>



</android.support.v7.widget.CardView>